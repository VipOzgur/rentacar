@model Rentacar.Models.Rezervasyon

@{
    ViewData["Title"] = "Rezervasyon Oluştur";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<div class="card shadow-lg p-4 rounded">
    <h4 class="section-title text-center mb-3">Rezervasyon Oluştur</h4>
    <div class="card-body">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="AracId" class="form-label">Araç Seç</label>
                    <select asp-for="AracId" class="form-select" asp-items="ViewBag.AracId"></select>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="UserId" class="form-label">Kullanıcı Seç</label>
                    <select asp-for="UserId" class="form-select" asp-items="ViewBag.UserId"></select>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="StartDate" class="form-label">Başlangıç Tarihi</label>
                    <input asp-for="StartDate" class="form-control" type="date" />
                    <span asp-validation-for="StartDate" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="FinishDate" class="form-label">Bitiş Tarihi</label>
                    <input asp-for="FinishDate" class="form-control" type="date" />
                    <span asp-validation-for="FinishDate" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="Durum" class="form-label">Durum</label>
                    <select asp-for="Durum" class="form-select">
                        <option value="1">Aktif</option>
                        <option value="0">Pasif</option>
                    </select>
                    <span asp-validation-for="Durum" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="Onay" class="form-label">Onay</label>
                    <select asp-for="Onay" class="form-select">
                        <option value="1">Onaylı</option>
                        <option value="0">Onaysız</option>
                    </select>
                    <span asp-validation-for="Onay" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="AlisLokasyonId" class="form-label">Alış Lokasyonu</label>
                    <select asp-for="AlisLokasyonId" class="form-select" asp-items="ViewBag.AlisLokasyonId"></select>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="TeslimLokasyonId" class="form-label">Teslim Lokasyonu</label>
                    <select asp-for="TeslimLokasyonId" class="form-select" asp-items="ViewBag.TeslimLokasyonId"></select>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="KaskoId" class="form-label">Kasko ID</label>
                    <input asp-for="KaskoId" class="form-control" />
                    <span asp-validation-for="KaskoId" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="Fiyat" class="form-label">Fiyat</label>
                    <input asp-for="Fiyat" class="form-control" />
                    <span asp-validation-for="Fiyat" class="text-danger"></span>
                </div>
                <div class="col-md-12 mb-3">
                    <label asp-for="Not" class="form-label">Not</label>
                    <textarea asp-for="Not" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Not" class="text-danger"></span>
                </div>
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-success me-2">
                    <i class="bi bi-save"></i> Kaydet
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Geri Dön
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
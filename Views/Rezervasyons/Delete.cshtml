@model Rentacar.Models.Rezervasyon

@{
    ViewData["Title"] = "Rezervasyon Sil";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<div class="card shadow-lg p-4 rounded">
    <div class="card-header bg-danger text-white text-center">
        <h1 class="mb-0">Rezervasyon Sil</h1>
    </div>
    <div class="card-body">
        <h4 class="text-center text-danger mb-3">Bu rezervasyonu silmek istediğinizden emin misiniz?</h4>
        <hr />
        <dl class="row">
            <dt class="col-md-4 font-weight-bold">Başlangıç Tarihi</dt>
            <dd class="col-md-8">@Html.DisplayFor(model => model.StartDate)</dd>

            <dt class="col-md-4 font-weight-bold">Bitiş Tarihi</dt>
            <dd class="col-md-8">@Html.DisplayFor(model => model.FinishDate)</dd>

            <dt class="col-md-4 font-weight-bold">Durum</dt>
            <dd class="col-md-8">@Html.DisplayFor(model => model.Durum)</dd>

            <dt class="col-md-4 font-weight-bold">Onay</dt>
            <dd class="col-md-8">@Html.DisplayFor(model => model.Onay)</dd>

            <dt class="col-md-4 font-weight-bold">Kasko</dt>
            <dd class="col-md-8">@Html.DisplayFor(model => model.KaskoId)</dd>

            <dt class="col-md-4 font-weight-bold">Fiyat</dt>
            <dd class="col-md-8">@Html.DisplayFor(model => model.Fiyat)</dd>

            <dt class="col-md-4 font-weight-bold">Not</dt>
            <dd class="col-md-8">@Html.DisplayFor(model => model.Not)</dd>

            <dt class="col-md-4 font-weight-bold">Alış Lokasyonu</dt>
            <dd class="col-md-8">@Html.DisplayFor(model => model.AlisLokasyon.Id)</dd>

            <dt class="col-md-4 font-weight-bold">Araç</dt>
            <dd class="col-md-8">@Html.DisplayFor(model => model.Arac.Id)</dd>

            <dt class="col-md-4 font-weight-bold">Teslim Lokasyonu</dt>
            <dd class="col-md-8">@Html.DisplayFor(model => model.TeslimLokasyon.Id)</dd>

            <dt class="col-md-4 font-weight-bold">Kullanıcı</dt>
            <dd class="col-md-8">@Html.DisplayFor(model => model.User.Id)</dd>
        </dl>
        <div class="action-buttons text-center mt-4">
            <form asp-action="Delete" class="d-inline">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash-fill"></i> Sil
                </button>
            </form>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Geri Dön
            </a>
        </div>
    </div>
</div>
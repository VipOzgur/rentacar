@model IEnumerable<Rentacar.Models.Rezervasyon>

@{
    ViewData["Title"] = "Rezervasyonlar";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<!-- Sayfa Başlığı ve Yeni Rezervasyon Butonu -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="fs-4">Rezervasyonlar</h1>
    <a asp-action="Create" class="btn btn-primary btn-sm">+ Yeni Rezervasyon</a>
</div>

<!-- Tablo -->
<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.StartDate)</th>
                <th>@Html.DisplayNameFor(model => model.FinishDate)</th>
                <th>@Html.DisplayNameFor(model => model.Durum)</th>
                <th>@Html.DisplayNameFor(model => model.Onay)</th>
                <th class="d-none d-md-table-cell">@Html.DisplayNameFor(model => model.Arac)</th>
                <th class="d-none d-md-table-cell">@Html.DisplayNameFor(model => model.User)</th>
                <th>Aksiyonlar</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@(item.StartDate != null ? DateTime.Parse(item.StartDate).ToShortDateString() : "N/A")</td>
                    <td>@(item.FinishDate != null ? DateTime.Parse(item.FinishDate).ToShortDateString() : "N/A")</td>
                    <td>@item.Durum</td>
                    <td>@(item.Onay.HasValue ? (item.Onay.Value == 1 ? "Evet" : "Hayır") : "Belirsiz")</td>
                    <td class="d-none d-md-table-cell">@item.Arac?.Id ?? "N/A"</td>
                    <td class="d-none d-md-table-cell">@item.User?.Id ?? "N/A"</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
            }
        </tbody>
    </table>
</div>
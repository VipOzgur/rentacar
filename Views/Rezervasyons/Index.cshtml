@model IEnumerable<Rentacar.Models.Rezervasyon>

@{
    ViewData["Title"] = "Rezervasyonlar";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<h4 class="section-title text-center mb-3">Rezervasyonlar</h4>

<p>
    <a asp-action="Create" asp-controller="Rezervasyons" class="create-button">Yeni Rezervasyon Ekle</a>
</p>

<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.StartDate)</th>
                <th>@Html.DisplayNameFor(model => model.FinishDate)</th>
   
                <th>@Html.DisplayNameFor(model => model.Onay)</th>
               
                <th>@Html.DisplayNameFor(model => model.Fiyat)</th>
                <th>@Html.DisplayNameFor(model => model.Not)</th>
              
                <th>@Html.DisplayNameFor(model => model.Arac)</th>
               
              
                <th>Aksiyonlar</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td data-label="Başlangıç Tarihi">@Html.DisplayFor(modelItem => item.StartDate)</td>
                    <td data-label="Bitiş Tarihi">@Html.DisplayFor(modelItem => item.FinishDate)</td>
                   
                    <td data-label="Onay">@Html.DisplayFor(modelItem => item.Onay)</td>
                 
                    <td data-label="Fiyat">@Html.DisplayFor(modelItem => item.Fiyat)</td>
                    <td data-label="Not">@Html.DisplayFor(modelItem => item.Not)</td>
                    
                    <td data-label="Araç">@Html.DisplayFor(modelItem => item.Arac.Marka)</td>
               
                   
                    <td data-label="Aksiyonlar">
                        <div class="action-buttons">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Düzenle</a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Detaylar</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Sil</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
@model Rentacar.Models.User

@{
    ViewData["Title"] = "Kullanıcı Sil";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<h1>Kullanıcı Sil</h1>

<h2 class="text-danger text-center fw-bold">Bu kullanıcıyı silmek istediğinizden emin misiniz?</h2>

<div class="details-card shadow-lg p-4 bg-white rounded">
    <h4 class="section-title text-center mb-3">Kullanıcı Bilgileri</h4>
    <hr class="mb-4" />
    <div class="row">
        <div class="col-md-6 mb-3">
            <div class="details-item">
                <strong class="details-title">Ad:</strong>
                <span class="details-content">@Html.DisplayFor(model => model.Ad)</span>
            </div>
        </div>
        <div class="col-md-6 mb-3">
            <div class="details-item">
                <strong class="details-title">Soyad:</strong>
                <span class="details-content">@Html.DisplayFor(model => model.Soyad)</span>
            </div>
        </div>
        <div class="col-md-6 mb-3">
            <div class="details-item">
                <strong class="details-title">Telefon:</strong>
                <span class="details-content">@Html.DisplayFor(model => model.Telefon)</span>
            </div>
        </div>
        <div class="col-md-6 mb-3">
            <div class="details-item">
                <strong class="details-title">Adres:</strong>
                <span class="details-content">@Html.DisplayFor(model => model.Adres)</span>
            </div>
        </div>
        <div class="col-md-6 mb-3">
            <div class="details-item">
                <strong class="details-title">E-posta:</strong>
                <span class="details-content">@Html.DisplayFor(model => model.Eposta)</span>
            </div>
        </div>
        <div class="col-md-6 mb-3">
            <div class="details-item">
                <strong class="details-title">Parola:</strong>
                <span class="details-content">@Html.DisplayFor(model => model.Password)</span>
            </div>
        </div>
        <div class="col-md-6 mb-3">
            <div class="details-item">
                <strong class="details-title">Aktif mi?</strong>
                <span class="details-content">@Html.DisplayFor(model => model.IsActive)</span>
            </div>
        </div>
        <div class="col-md-6 mb-3">
            <div class="details-item">
                <strong class="details-title">Not:</strong>
                <span class="details-content">@Html.DisplayFor(model => model.Not)</span>
            </div>
        </div>
        <div class="col-md-6 mb-3">
            <div class="details-item">
                <strong class="details-title">Rol ID:</strong>
                <span class="details-content">@Html.DisplayFor(model => model.Role.Id)</span>
            </div>
        </div>
    </div>

    <form asp-action="Delete" class="text-center mt-4">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger btn-lg me-3">
            <i class="bi bi-trash-fill"></i> Sil
        </button>
        <a asp-action="Index" class="btn btn-secondary btn-lg">
            <i class="bi bi-arrow-left"></i> Geri Dön
        </a>
    </form>
</div>
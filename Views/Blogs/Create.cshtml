@model Rentacar.Models.Blog

@{
    ViewData["Title"] = "Yeni Blog Ekle";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<div class="card shadow-lg p-4 rounded">
    <div class="card-header bg-primary text-white text-center">
        <h1 class="mb-0">Yeni Blog Ekle</h1>
    </div>
    <div class="card-body">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <div class="row g-3">
                <!-- Sol Sütun -->
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="Tip" class="form-label">Blog Tipi</label>
                        <input asp-for="Tip" class="form-control" placeholder="Blog tipi giriniz" />
                        <span asp-validation-for="Tip" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="AdminId" class="form-label">Yazar (Admin)</label>
                        <select asp-for="AdminId" class="form-control" asp-items="ViewBag.AdminId">
                            <option value="" disabled selected>Yazar seçiniz</option>
                        </select>
                        <span asp-validation-for="AdminId" class="text-danger"></span>
                    </div>
                </div>

                <!-- Sağ Sütun -->
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="Icerik" class="form-label">İçerik</label>
                        <textarea asp-for="Icerik" class="form-control" rows="4" placeholder="İçeriği buraya yazınız"></textarea>
                        <span asp-validation-for="Icerik" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="IsActive" class="form-label">Aktiflik Durumu</label>
                        <select asp-for="IsActive" class="form-control">
                            <option value="true">Aktif</option>
                            <option value="false">Pasif</option>
                        </select>
                        <span asp-validation-for="IsActive" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <!-- Aksiyonlar -->
            <div class="text-center mt-4">
                <button type="submit" class="btn btn-success btn-lg">
                    <i class="bi bi-save"></i> Kaydet
                </button>
                <a asp-action="Index" class="btn btn-secondary btn-lg">
                    <i class="bi bi-arrow-left"></i> Geri Dön
                </a>
            </div>
        </form>
    </div>
</div>
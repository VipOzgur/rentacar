@model IEnumerable<Rentacar.Models.Araclar>

@{
    ViewData["Title"] = "Araç Listesi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="hero-section parallax position-relative">
  <div class="container-fluid d-flex align-items-center justify-content-between hero-content">
    <div class="hero-text text-white p-5">
      <h1 class="display-4 fw-bold">Hayalinizdeki aracı bugün keşfedin!</h1>
      <p class="fs-5">Hızlı, kolay ve uygun fiyatlı araç kiralama.</p>
      <a href="/Araclar" class="btn btn-primary btn-lg rounded-pill mt-3">Keşfet</a>
    </div>
    <div class="hero-form bg-white p-4 rounded shadow custom-opacity position-relative">
  <h5 class="text-center mb-4">Araç Kirala</h5>
  @await Html.PartialAsync("_Search",null)

</div>
  </div>
</section>



<section class="car-cards-section parallax py-5">
  <div class="container">
    <h2 class="text-center mb-5 fw-bold">Araçlarımız</h2>
    <div class="row g-4">
      <!-- Dinamik Kart -->
   <div class="row">
        @foreach (var item in Model)
        { 
            <div class="col-md-4 mb-4">
                <div class="card flip-card">
                    <!-- Kartın Ön Yüzü -->
                    <div class="card-front">
                        <img src="@item.Profil" alt="Araç Fotoğrafı" class="card-img-top">
                        <div class="card-body">
                            <h5 class="card-title">@item.Marka @item.Model</h5>
                            <p class="card-text">Açıklama: @item.Aciklama</p>
                            <p class="card-text">Yakıt: @item.Yakit</p>
                            <p class="card-text">Fiyat: @item.Fiyat TL/gün</p>
                        </div>
                        <div class="card-footer">
                            <a href="@Url.Action("Details", new { id = item.Id })" class="btn btn-primary">Detaylar</a>
                            <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-warning">Düzenle</a>
                            <a href="@Url.Action("Delete", new { id = item.Id })" class="btn btn-danger">Sil</a>
                            <button class="btn btn-secondary flip-btn">Döndür</button> <!-- Döndür Butonu -->
                        </div>
                    </div>

                    <!-- Kartın Arka Yüzü (Boş Alan) -->
                    <div class="card-back">
                        <!-- Burada boş bir alan olacak -->
                    </div>
                </div>
            </div>
        }
    </div>
</div>




      
      <!-- Başka bir kart -->
      
    </div>
  </div>
</section>



@model Rentacar.Models.Role

@{
    ViewData["Title"] = "Rol Sil";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<div class="card shadow-lg p-4 rounded">
    <div class="card-header bg-danger text-white text-center">
        <h1 class="mb-0">Rol Sil</h1>
    </div>
    <div class="card-body">
        <h3 class="text-center text-danger mb-4">
            <i class="bi bi-exclamation-triangle"></i> Bu öğeyi silmek istediğinizden emin misiniz?
        </h3>
        <dl class="row">
            <dt class="col-sm-4 text-muted">Rol Adı</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Ad)</dd>
        </dl>
    </div>
    <div class="card-footer text-center">
        <form asp-action="Delete" class="d-inline-block">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger btn-lg me-2">
                <i class="bi bi-trash"></i> Sil
            </button>
        </form>
        <a asp-action="Index" class="btn btn-secondary btn-lg">
            <i class="bi bi-arrow-left"></i> Geri Dön
        </a>
    </div>
</div>

@model Rentacar.Models.Extralar

@{
    ViewData["Title"] = "Detaylar";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<div class="details-card shadow-lg p-4 bg-white rounded">
    <h4 class="section-title text-center mb-3">Extra Detayları</h4>
    <hr class="mb-4" />
    <div class="row">
        <div class="col-md-6 mb-3">
            <div class="details-item">
                <strong class="details-title">Ad:</strong>
                <span class="details-content">@Html.DisplayFor(model => model.Ad)</span>
            </div>
        </div>
        <div class="col-md-6 mb-3">
            <div class="details-item">
                <strong class="details-title">Fiyat:</strong>
                <span class="details-content">@Html.DisplayFor(model => model.Fiyat)</span>
            </div>
        </div>
        <div class="col-md-6 mb-3">
            <div class="details-item">
                <strong class="details-title">Durum:</strong>
                <span class="details-content">
                    @if (Model.Durum.HasValue && Model.Durum.Value == 1)
                    {
                        <span class="badge bg-success">Aktif</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Pasif</span>
                    }
                </span>
            </div>
        </div>
    </div>
</div>

<div class="action-buttons text-center mt-4">
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary me-3">
        <i class="bi bi-pencil"></i> Düzenle
    </a>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Geri Dön
    </a>
</div>
@model IEnumerable<Rentacar.Models.Extralar>

@{
    ViewData["Title"] = "Extralar Listesi";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<h1 class="page-header">Extralar</h1>
<p>
    <a asp-action="Create" class="create-button btn btn-success">
        <i class="bi bi-plus-circle"></i> Yeni Ekstra Ekle
    </a>
</p>
<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Ad)</th>
                <th>@Html.DisplayNameFor(model => model.Fiyat)</th>
                <th>@Html.DisplayNameFor(model => model.Durum)</th>
                <th class="text-center">Aksiyonlar</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td data-label="Ad">@Html.DisplayFor(modelItem => item.Ad)</td>
                    <td data-label="Fiyat">@Html.DisplayFor(modelItem => item.Fiyat)</td>
                    <td data-label="Durum">
                        @if (item.Durum.HasValue && item.Durum.Value == 1)
                        {
                            <span class="badge bg-success">Aktif</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Pasif</span>
                        }
                    </td>
                    <td data-label="Aksiyonlar" class="text-center">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary me-2">
                            <i class="bi bi-pencil"></i> Düzenle
                        </a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info me-2">
                            <i class="bi bi-info-circle"></i> Detaylar
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                            <i class="bi bi-trash"></i> Sil
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
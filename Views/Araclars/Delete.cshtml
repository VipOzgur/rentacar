@model Rentacar.Models.Araclar

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<h1>Araç Sil</h1>

<h2 class="text-danger text-center fw-bold">Bu öğeyi silmek istediğinizden emin misiniz?</h2>
<div class="details-card shadow-lg p-4 bg-white rounded">
    <h4 class="section-title text-center mb-3">Araç Bilgileri</h4>
    
    <hr class="mb-4" />
    <div class="row">
        <div class="col-md-6 mb-3">
            <div class="details-item">
                <strong class="details-title">Açıklama:</strong>
                <span class="details-content">@Html.DisplayFor(model => model.Aciklama)</span>
            </div>
        </div>
        <div class="col-md-6 mb-3">
            <div class="details-item">
                <strong class="details-title">Plaka:</strong>
                <span class="details-content">@Html.DisplayFor(model => model.Plaka)</span>
            </div>
        </div>
        <div class="col-md-6 mb-3">
            <div class="details-item">
                <strong class="details-title">Marka:</strong>
                <span class="details-content">@Html.DisplayFor(model => model.Marka)</span>
            </div>
        </div>
        <div class="col-md-6 mb-3">
            <div class="details-item">
                <strong class="details-title">Model:</strong>
                <span class="details-content">@Html.DisplayFor(model => model.Model)</span>
            </div>
        </div>
        <div class="col-md-6 mb-3">
            <div class="details-item">
                <strong class="details-title">Fiyat:</strong>
                <span class="details-content">@Html.DisplayFor(model => model.Fiyat)</span>
            </div>
        </div>
        <div class="col-md-6 mb-3">
            <div class="details-item">
                <strong class="details-title">Aktiflik:</strong>
                <span class="details-content">@Html.DisplayFor(model => model.IsActive)</span>
            </div>
        </div>
        <div class="col-md-6 mb-3">
            <div class="details-item">
                <strong class="details-title">Profil:</strong>
                <span class="details-content">@Html.DisplayFor(model => model.Profil)</span>
            </div>
        </div>
        <div class="col-md-6 mb-3">
            <div class="details-item">
                <strong class="details-title">Kiralanma Sayısı:</strong>
                <span class="details-content">@Html.DisplayFor(model => model.KiralanmaSayisi)</span>
            </div>
        </div>
        <div class="col-md-6 mb-3">
            <div class="details-item">
                <strong class="details-title">Görüntülenme Sayısı:</strong>
                <span class="details-content">@Html.DisplayFor(model => model.GoruntulemeSayisi)</span>
            </div>
        </div>
        <div class="col-md-6 mb-3">
            <div class="details-item">
                <strong class="details-title">Durum:</strong>
                <span class="details-content">@Html.DisplayFor(model => model.Durum)</span>
            </div>
        </div>
        <div class="col-md-6 mb-3">
            <div class="details-item">
                <strong class="details-title">Motor Gücü:</strong>
                <span class="details-content">@Html.DisplayFor(model => model.MotorGucu)</span>
            </div>
        </div>
        <div class="col-md-6 mb-3">
            <div class="details-item">
                <strong class="details-title">Depozito:</strong>
                <span class="details-content">@Html.DisplayFor(model => model.Depozito)</span>
            </div>
        </div>
        <div class="col-md-6 mb-3">
            <div class="details-item">
                <strong class="details-title">Kilometre:</strong>
                <span class="details-content">@Html.DisplayFor(model => model.Km)</span>
            </div>
        </div>
        <div class="col-md-6 mb-3">
            <div class="details-item">
                <strong class="details-title">Yakıt Türü:</strong>
                <span class="details-content">@Html.DisplayFor(model => model.Yakit)</span>
            </div>
        </div>
        <div class="col-md-6 mb-3">
            <div class="details-item">
                <strong class="details-title">Km Başına Yakıt:</strong>
                <span class="details-content">@Html.DisplayFor(model => model.YakitKm)</span>
            </div>
        </div>
        <div class="col-md-6 mb-3">
            <div class="details-item">
                <strong class="details-title">Vites:</strong>
                <span class="details-content">@Html.DisplayFor(model => model.Vites)</span>
            </div>
        </div>
    </div>

    <form asp-action="Delete" class="text-center mt-4">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger me-2">
            <i class="bi bi-trash-fill"></i> Sil
        </button>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Geri Dön
        </a>
    </form>
</div>

@model Rentacar.Models.Lokasyonlar

@{
    ViewData["Title"] = "Yeni Lokasyon Ekle";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<div class="card shadow-lg p-4 rounded">
    <div class="card-header bg-primary text-white text-center">
        <h1 class="mb-0">Yeni Lokasyon Ekle</h1>
    </div>
    <div class="card-body">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="Ad" class="form-label">Ad</label>
                <input asp-for="Ad" class="form-control" placeholder="Lokasyon Adı Girin" />
                <span asp-validation-for="Ad" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Kordinatlar" class="form-label">Koordinatlar</label>
                <input asp-for="Kordinatlar" class="form-control" placeholder="Koordinatları Girin" />
                <span asp-validation-for="Kordinatlar" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Durum" class="form-label">Durum</label>
                <select asp-for="Durum" class="form-select">
                    <option value="1">Aktif</option>
                    <option value="0">Pasif</option>
                </select>
                <span asp-validation-for="Durum" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Fiyat" class="form-label">Fiyat</label>
                <input asp-for="Fiyat" class="form-control" placeholder="Fiyat Bilgisi Girin" />
                <span asp-validation-for="Fiyat" class="text-danger"></span>
            </div>

            <div class="text-center mt-4">
                <button type="submit" class="btn btn-success btn-lg">
                    <i class="bi bi-plus-circle"></i> Kaydet
                </button>
                <a asp-action="Index" class="btn btn-secondary btn-lg">
                    <i class="bi bi-arrow-left"></i> Geri Dön
                </a>
            </div>
        </form>
    </div>
</div>
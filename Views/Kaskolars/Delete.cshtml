@model Rentacar.Models.Kaskolar

@{
    ViewData["Title"] = "Kasko Sil";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<div class="card shadow-lg p-4 rounded">
    <div class="card-header bg-danger text-white text-center">
        <h1 class="mb-0">Kasko Silme Onayı</h1>
    </div>
    <div class="card-body">
        <h5 class="text-center text-danger mb-4">
            Bu kaskoyu silmek istediğinizden emin misiniz?
        </h5>
        <dl class="row">
            <dt class="col-sm-4 text-muted">Ad</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Ad)</dd>

            <dt class="col-sm-4 text-muted">Günlük Fiyat</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.GunlukFiyat)</dd>

            <dt class="col-sm-4 text-muted">Saatlik Fiyat</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.SaatlikFiyat)</dd>
        </dl>
    </div>
    <div class="card-footer text-center">
        <form asp-action="Delete" class="d-inline">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger btn-lg me-3">
                <i class="bi bi-trash"></i> Sil
            </button>
        </form>
        <a asp-action="Index" class="btn btn-secondary btn-lg">
            <i class="bi bi-arrow-left"></i> Geri Dön
        </a>
    </div>
</div>
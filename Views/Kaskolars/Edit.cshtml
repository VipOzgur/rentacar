@model Rentacar.Models.Kaskolar

@{
    ViewData["Title"] = "Kasko Düzenle";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<div class="card shadow-lg p-4 rounded">
    <div class="card-header bg-primary text-white text-center">
        <h1 class="mb-0">Kasko Düzenle</h1>
    </div>
    <div class="card-body">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="row g-3">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Ad" class="form-label">Ad</label>
                        <input asp-for="Ad" class="form-control" placeholder="Kasko adı giriniz" />
                        <span asp-validation-for="Ad" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="GunlukFiyat" class="form-label">Günlük Fiyat</label>
                        <input asp-for="GunlukFiyat" class="form-control" placeholder="Günlük fiyat giriniz" />
                        <span asp-validation-for="GunlukFiyat" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="SaatlikFiyat" class="form-label">Saatlik Fiyat</label>
                        <input asp-for="SaatlikFiyat" class="form-control" placeholder="Saatlik fiyat giriniz" />
                        <span asp-validation-for="SaatlikFiyat" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="text-center mt-4">
                <button type="submit" class="btn btn-success btn-lg me-3">
                    <i class="bi bi-save"></i> Kaydet
                </button>
                <a asp-action="Index" class="btn btn-secondary btn-lg">
                    <i class="bi bi-arrow-left"></i> Geri Dön
                </a>
            </div>
        </form>
    </div>
</div>
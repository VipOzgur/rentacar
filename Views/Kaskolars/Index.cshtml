@model IEnumerable<Rentacar.Models.Kaskolar>

@{
    ViewData["Title"] = "Kaskolar Listesi";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<div class="card shadow-lg p-4 rounded">
    <div class="card-header bg-primary text-white text-center">
        <h1 class="mb-0">Kaskolar Listesi</h1>
    </div>
    <div class="card-body">
        <div class="d-flex justify-content-between mb-3">
            <h5 class="text-muted">Tüm kaskoları görüntüleyin ve yönetin.</h5>
            <a asp-action="Create" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Yeni Ekle
            </a>
        </div>

        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Ad)</th>
                        <th>@Html.DisplayNameFor(model => model.GunlukFiyat)</th>
                        <th>@Html.DisplayNameFor(model => model.SaatlikFiyat)</th>
                        <th class="text-center">Aksiyonlar</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Ad)</td>
                            <td>@Html.DisplayFor(modelItem => item.GunlukFiyat)</td>
                            <td>@Html.DisplayFor(modelItem => item.SaatlikFiyat)</td>
                            <td class="text-center">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary me-2">
                                    <i class="bi bi-pencil"></i> Düzenle
                                </a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info me-2">
                                    <i class="bi bi-info-circle"></i> Detaylar
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                                    <i class="bi bi-trash"></i> Sil
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>